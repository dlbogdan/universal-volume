{
  "Description": "Universal Volume Plugin",
  "Documentation": "https://github.com/dlbogdan/universal-volume",
  "Interface": {
    "Types": ["docker.volumedriver/1.0"],
    "Socket": "univol.sock"
  },
  "Entrypoint": ["/universal-volume"],
  "Mounts": [
        {
            "Source": "/mnt",
            "Destination": "/mnt",
            "Type": "bind",
            "Options": ["rbind"]
        }
    ],
  "Env": [
    {
      "Name": "ROOT_PATH",
      "Description": "Root path for the plugin volumes",
      "Settable": ["value"],
      "Value": "/mnt/univol"
    },
    {
      "Name": "DEBUG",
      "Description": "Enable debug mode",
      "Settable": ["value"],
      "Value": "false"
    },
    {
      "Name": "SCOPE",
      "Description": "Scope of the mountpoint (global or local)",
      "Settable": ["value"],
      "Value": "global"
    }
  ],
   "linux": {
    "AllowAllDevices": true,
    "capabilities": [
      "CAP_NET_ADMIN",
      "CAP_SYS_ADMIN",
      "CAP_SYS_MODULE"
    ],
    "devices": null
  }
}
